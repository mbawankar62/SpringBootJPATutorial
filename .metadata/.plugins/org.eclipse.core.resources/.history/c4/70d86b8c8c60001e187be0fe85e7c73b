package com.mohit.corejava;

public class VolkSwagan {
	
	public static void main(String args[]) {
		
		String input = "acabmnlplxyz";
		char str[] = input.toCharArray();//a == 
		System.out.println("str[0]::"+str[0]);
		for (int i = 1; i < str.length; i++) {
			
			System.out.println("-------");
			System.out.println(str[i] == str[i - 1] + 1);
			System.out.println("str[i - 1] + 1:"+str[i - 1] + 1);
			System.out.print("-------");
			
			if ((str[i] == str[i - 1] + 1) || (str[i] == str[i - 1] - 1)) {
				System.out.print(str[i]);
			} else {
				System.out.print("\n" + str[i]);
			}
		}}
	}


// c == a+1 || c